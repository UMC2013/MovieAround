<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MovieDetailsActivity" >

    <TextView
        android:id="@+id/textMovieTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Aqui vai o nome" />

    <TextView
        android:id="@+id/textMovieSynopsis"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textMovieTitle"
        android:layout_marginTop="20sp"
        android:text="86-year-old Irving Zisman takes a trip from Nebraska to North Carolina to take his 8 year-old grandson, Billy, back to his real father." />

    <TextView
        android:id="@+id/textMovieGenres"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textMovieSynopsis"
        android:layout_marginTop="20sp"
        android:text="E aqui vÃ£o os generos do filme." />

</RelativeLayout>